---
import avatar from "../assets/original.png";
import IconPhone from "./icons/IconPhone.astro";
import IconEmail from "./icons/IconEmail.astro";
import IconMapPin from "./icons/IconMapPin.astro";
import IconCalendar from "./icons/IconCalendar.astro";
const data = {
  phone: "+584162181992",
  location: "Barquisimeto. Venezuela",
  email: "corbos1995@gmail.com",
  birthday: new Date(1995, 9, 21),
};
---

<article class="col-span-12 lg:col-span-4 lg:h-screen lg:sticky top-44">
  <section
    class="w-full mb-6 lg:mb-0 mx-auto relative bg-white text-center dark:bg-[#111111] px-6 pb-8 rounded-[20px] mt-[180px] md:mt-[220px] lg:mt-0"
  >
    <img
      class="w-[240px] absolute left-[50%] transform -translate-x-[50%] h-[240px] drop-shadow-xl mx-auto rounded-[20px] -mt-[140px]"
      src={avatar.src}
    />
    <header class="pt-[100px] pb-8">
      <h1 class="mt-6 mb-3 text-5xl font-semibold dark:text-white">
        Miguel Corbos
      </h1>
      <h3
        class="mb-4 text-[#7B7B7B] inline-block dark:bg-[#1D1D1D] px-5 py-1.5 rounded-lg dark:text-[#A6A6A6]"
      >
        Desarrollador full-stack
      </h3>
    </header>
    <aside class="flex justify-center space-x-3">
      <!-- Sección de redes sociales -->
      <a>
        <span class="btnsocial text-[#0072b1] dark:bg-black"
          ><svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 448 512"
            height="1em"
            width="1em"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"
            ></path></svg
          ></span
        >
      </a>
    </aside>
    <ul class="p-7 rounded-2xl mt-7 bg-[#F3F6F6] dark:bg-[#1D1D1D]">
      <li class="flex py-2.5 border-b border-[#E3E3E3] dark:border-[#3D3A3A]">
        <IconPhone />
        <div class="text-left ml-2.5">
          <p class="text-xs text-[#44566C] dark:text-[#A6A6A6]">Teléfono</p><p
            class="dark:text-white break-all"
          >
            <a
              class="hover:text-[#FA5252] duration-300 transition"
              href={`tel:${data.phone}`}>{data.phone}</a
            >
          </p>
        </div>
        <li class="flex py-2.5 border-b border-[#E3E3E3] dark:border-[#3D3A3A]">
          <IconMapPin />
          <div class="text-left ml-2.5">
            <p class="text-xs text-[#44566C] dark:text-[#A6A6A6]">
              Localidad
            </p><p class="dark:text-white break-all">
              <a class="hover:text-[#FA5252] duration-300 transition"
                >{data.location}</a
              >
            </p>
          </div>
        </li>
        <li class="flex py-2.5 border-b border-[#E3E3E3] dark:border-[#3D3A3A]">
          <IconEmail />
          <div class="text-left ml-2.5">
            <p class="text-xs text-[#44566C] dark:text-[#A6A6A6]">Email</p><p
              class="dark:text-white break-all"
            >
              <a
                class="hover:text-[#FA5252] duration-300 transition"
                href={`mailto:${data.email}`}>{data.email}</a
              >
            </p>
          </div>
        </li>
        <li class="flex py-2.5 border-b border-[#E3E3E3] dark:border-[#3D3A3A]">
          <IconCalendar />
          <div class="text-left ml-2.5">
            <p class="text-xs text-[#44566C] dark:text-[#A6A6A6]">
              F.Nacimiento
            </p><p class="dark:text-white break-all">
              <a class="hover:text-[#FA5252] duration-300 transition"
                >{data.birthday.toLocaleDateString()}</a
              >
            </p>
          </div>
        </li>
      </li>
      <a
        href="/images/cv.pdf"
        download=""
        class="gap-1 inline-flex items-center mx-auto bg-gradient-to-r duration-200 transition ease-linear hover:bg-gradient-to-l from-[#DD2476] to-[#fa5252ef] px-8 py-3 text-lg text-white rounded-[35px] mt-6"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
          ></path>
        </svg>
         Descargar CV</a
      >
    </ul>
  </section>
</article>
